<BorderPane nodeOrientation="LEFT_TO_RIGHT" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sampleforms.HelloController">
    <center>
        <GridPane alignment="CENTER" hgap="9.0" prefHeight="186.0" prefWidth="369.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints fillWidth="false" halignment="RIGHT" hgrow="ALWAYS" maxWidth="-Infinity" prefWidth="70.0" />
                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" maxWidth="-Infinity" prefWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="16.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="17.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="17.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="1.7976931348623157E308" prefHeight="25.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <TextField fx:id="firstName" GridPane.columnIndex="1" />
                <TextField fx:id="lastName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="First Name: " />
                <Label text="Last Name: " GridPane.rowIndex="1" />
                <TextField fx:id="number" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Number: " GridPane.rowIndex="2" />
                <HBox alignment="BOTTOM_RIGHT" prefHeight="43.0" prefWidth="526.0" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <children>
                        <Button fx:id="addButton" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#addContact" text="Add" textAlignment="CENTER" textFill="#121212">
                            <font>
                                <Font name="Segoe UI Semibold" size="13.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
            </BorderPane.margin>
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>
        </GridPane>
    </center>
    <top>
        <FlowPane fx:id="contacts" alignment="CENTER_LEFT" blendMode="MULTIPLY" hgap="6.0" nodeOrientation="LEFT_TO_RIGHT" style="-fx-background-color: skyblue; -fx-background-radius: 3px; -fx-background-insets: 4px;" vgap="5.0">
            <children>
                <SVGPath content="M40,60 C42,48 44,30 25,32" />
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: white;" text="Contacts: ">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="20.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="TEXT" />
                    </cursor>
                </Text>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <cursor>
                <Cursor fx:constant="DEFAULT" />
            </cursor>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </FlowPane>
    </top>
    <padding>
        <Insets bottom="10.0" left="1.0" right="1.0" top="1.0" />
    </padding>
