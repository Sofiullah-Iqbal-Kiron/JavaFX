<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.login_subsystem.MainController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <Text blendMode="MULTIPLY" fill="#04016f" stroke="#12d012" strokeDashOffset="3.0" strokeLineCap="ROUND" strokeLineJoin="ROUND" strokeType="OUTSIDE" strokeWidth="0.5" text="Welcome" textAlignment="CENTER">
      <font>
         <Font name="Microsoft JhengHei Light" size="24.0" />
      </font>
   </Text>
   <Line endX="100.0" fill="#140ec6" startX="-100.0" strokeLineCap="ROUND" strokeLineJoin="BEVEL" strokeType="OUTSIDE" strokeWidth="2.0" />
   <Button id="loginButton" fx:id="loginButton" defaultButton="true" mnemonicParsing="false" onAction="#bringLoginPanel" text="Login" textAlignment="CENTER">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <font>
         <Font name="Arial Bold" size="15.0" />
      </font></Button>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="or">
      <font>
         <Font name="Calibri" size="13.0" />
      </font>
   </Text>
   <Button id="registerButton" fx:id="registerButton" mnemonicParsing="false" onAction="#bringRegistrationPanel" text="Register Now!">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <font>
         <Font name="Arial Bold" size="14.0" />
      </font></Button>
   <effect>
      <InnerShadow />
   </effect>
</VBox>
